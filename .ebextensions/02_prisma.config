commands:
  01_npm_install:
    command: npm ci --production
    cwd: /var/app/staging
  02_copy_prisma_client:
    command: |
      mkdir -p /var/app/staging/node_modules/.prisma
      cp -r /var/app/staging/prisma-client-backup/* /var/app/staging/node_modules/.prisma/ || echo "Prisma client copy failed"
    cwd: /var/app/staging
  03_set_prisma_client:
    command: |
      mkdir -p /var/app/staging/node_modules/@prisma/client
      ln -sf /var/app/staging/node_modules/.prisma /var/app/staging/node_modules/@prisma/client/default || echo "Prisma symlink failed"